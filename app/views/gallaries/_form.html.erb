<div class="container">
  <%= form_for(@gallary) do |f| %>
      <% if @gallary.errors.any? %>
          <div id="error_explanation">
            <h2 align="center"><%= pluralize(@gallary.errors.count, "error") %> prohibited this gallary from being saved:</h2>

            <ul>
              <% @gallary.errors.full_messages.each do |message| %>
                  <li align="center"><%= message %></li>
              <% end %>
            </ul>
          </div> <br/>
      <% end %>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Title</label>
        <div class="col-sm-10">
          <%= f.text_field :title, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Image</label>
        <div class="col-sm-10">
          <%= f.file_field :image, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Image Type</label>
        <div class="col-sm-10">
          <%= f.select :image_type, options_for_select([['---',''],["Home Page", "Home Page"], ["Gallary", "Gallary"]]), :class=>"form-control form-control-lg"%>
        </div>
      </div>


      <div class="form-group row">
        <div align="center">
          <%= f.submit :class=>"btn btn-primary" %>
        </div>
      </div>

  <% end %>
</div><br/>
