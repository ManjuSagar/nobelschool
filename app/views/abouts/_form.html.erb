
<div class="container">
  <%= form_for(@about) do |f| %>
      <% if @about.errors.any? %>
          <div id="error_explanation" class="alert-warning">
            <h2 align="center"><%= pluralize(@about.errors.count, "error") %> prohibited this staff from being saved:</h2>
            <ul>
              <% @about.errors.full_messages.each do |message| %>
                  <li  align="center"><%= message %></li>
              <% end %>
            </ul>
          </div><br/>
      <% end %>
     <p class="text-center"> Please enter the new paragraph in new line.</p>
      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">About The School</label>
        <div class="col-sm-10">
          <%=f.text_area :school_info, :cols=> "50", :rows=> "15", :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <div align="center">
          <%= f.submit "Update About Information", :class=>"btn btn-primary" %>
        </div>
      </div>

  <% end %>
</div>
