<p id="notice"><%= notice %></p>
<div align="right">
  <%= link_to 'Go to Website', root_path,:class=>"btn btn-primary"%>
  <%= link_to 'Admin Home', index_path,:class=>"btn btn-primary"%>
</div>
<div class="admin-info">
<h1 class="text-center">Listing Facilities</h1><br/>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Image</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
  </thead>

  <tbody>

  <% @facilities.each do |gallary| %>
      <tr>
        <td><%= image_tag gallary.image.url, :width=> '150px', height:'150px'%></td>
        <td><%= link_to 'Edit', edit_gallary_path(gallary), :class=> 'btn btn-default'%></td>
        <td><%= link_to 'Destroy', gallary, method: :delete, data: { confirm: 'Are you sure?' }, :class=> 'btn btn-default' %></td>
      </tr>
  <% end %>
  </tbody>

  </tbody>
</table>
</div>
<br>
<div align="center">
  <%= link_to 'Add Facilities', new_facility_path,:class=>"btn btn-primary"%>
  <%= link_to 'Admin Home', index_path,:class=>"btn btn-primary"%>
</div>
