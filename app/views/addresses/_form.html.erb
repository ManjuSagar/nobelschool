
<div class="container">
  <%= form_for(@address) do |f| %>
      <% if @address.errors.any? %>
          <div id="error_explanation" class="alert-warning">
            <h2 align="center"><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>

            <ul>
              <% @address.errors.full_messages.each do |message| %>
                  <li align="center"><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %><br/>
      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Address Line 1</label>
        <div class="col-sm-10">
          <%=f.text_field :address_line1, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Address Line 2</label>
        <div class="col-sm-10">
          <%=f.text_field :address_line2, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Address Line 3</label>
        <div class="col-sm-10">
          <%=f.text_field :address_line3, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Pincode</label>
        <div class="col-sm-10">
          <%=f.text_field :pincode, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Phone Number 1</label>
        <div class="col-sm-10">
          <%=f.phone_field :ph_num1, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Phone Number 2</label>
        <div class="col-sm-10">
          <%=f.phone_field :ph_num2, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Start Time</label>
        <div class="col-sm-10" style="color: black">
          <%=f.time_select :start_time, :class=>"form-control form-control-lg", :ampm => true, :minute_step => 10%>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">End Time</label>
        <div class="col-sm-10" style="color: black">
          <%=f.time_select :end_time, :class=>"form-control form-control-lg",  :ampm => true, :minute_step => 10 %>
        </div>
      </div>

      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">School Email</label>
        <div class="col-sm-10">
          <%=f.text_field :email, :class=>"form-control form-control-lg"%>
        </div>
      </div>

      <div class="form-group row">
        <div class="text-center">
          <%= f.submit :class=>"btn btn-primary" %>
        </div>
      </div>

  <% end %>
</div>
